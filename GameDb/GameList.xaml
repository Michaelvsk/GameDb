<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Michaelvsk.GameDb.GameList">

    <ListView x:Name="GameListView" ItemsSource="{Binding Games}" VerticalOptions="FillAndExpand" HasUnevenRows="True" RefreshCommand="{Binding LoadItemsCommand}" IsPullToRefreshEnabled="True" IsRefreshing="{Binding IsBusy, Mode=OneWay}" CachingStrategy="RecycleElement">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Title}" LineBreakMode="TailTruncation" FontSize="16"></Label>
                        <Label Text="{Binding Description}" LineBreakMode="TailTruncation" FontSize="13"></Label>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
